{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "app",
    "utils",
    "hooks",
    "store",
    "components",
    "constants",
    "libs",
    "**/*/index.ts"
  ],
  "exclude": ["node_modules", "dist", "babel.config.js", "jest.config.js"]
}
